{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "typeRoots": [
        "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "lib": [
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules/**",
    "**/*.spec.ts"
  ]
}